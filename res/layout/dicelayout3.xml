<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dice_layout_root"
    android:layout_width="70dp"
    android:layout_height="70dp"> 
    <ImageView
        android:id="@+id/dice_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/empty"
        android:src="@drawable/ic_star_b" />
    <TextView
        android:id="@+id/dice_multi"
        android:textIsSelectable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#0000CC"
        android:layout_alignLeft="@id/dice_icon"
        android:layout_alignTop="@id/dice_icon"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>  
    <TextView
        android:id="@+id/dice_mod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#0000CC"
        android:layout_alignRight="@+id/dice_icon"
        android:layout_alignBottom="@+id/dice_icon"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textIsSelectable="false" />
    <TextView
        android:id="@+id/dice_result1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dice_icon"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textIsSelectable="false" />
    <TextView
        android:id="@+id/dice_result2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dice_icon"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textIsSelectable="false" />
    <TextView
        android:id="@+id/dice_result"
        android:textIsSelectable="false"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="50sp"
        android:textColor="#FF0000"
        android:gravity="fill_vertical"
        android:layout_alignTop="@id/dice_icon"
        android:layout_alignParentRight="true"/>

</RelativeLayout>